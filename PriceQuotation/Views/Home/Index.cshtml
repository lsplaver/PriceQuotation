@model PriceQuotation.Views.Home.IndexModel
@{
    ViewBag.Title = "Price Quotation";
}

<h1>Price Quotation</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="SubTotal">Subtotal:</label>
        <input asp-for="SubTotal" />
    </div>
    <div>
        <label asp-for="DiscountPercent">Discount percent:</label>
        <input asp-for="DiscountPercent" />
    </div>
    <div>
        <label>Discount amount:</label>
        <input value="@ViewBag.DiscountAmount("C2")" readonly />
    </div>
    <div>
        <label>Total:</label>
        <input value="@ViewBag.TotalPrice("C2")" readonly />
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>
